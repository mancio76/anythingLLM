# Staging Environment Configuration
# AnythingLLM API Service

# API Configuration
API_TITLE=AnythingLLM API (Staging)
API_VERSION=1.0.0-staging
API_PREFIX=/api/v1

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=2

# Database Configuration (PostgreSQL required)
# Set via environment variable or secret: DATABASE_URL

# AnythingLLM Configuration
# Set via environment variable or secret: ANYTHINGLLM_URL, ANYTHINGLLM_API_KEY
ANYTHINGLLM_TIMEOUT=30

# Storage Configuration
STORAGE_TYPE=s3
# Set via environment variable or secret: S3_BUCKET, S3_REGION, AWS_ACCESS_KEY_ID, AWS_SECRET_ACCESS_KEY
MAX_FILE_SIZE=104857600
ALLOWED_FILE_TYPES=pdf,json,csv

# Security Configuration
# Set via environment variable or secret: SECRET_KEY
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60
API_KEY_HEADER=X-API-Key

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=200
RATE_LIMIT_WINDOW=3600

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_SANITIZE_SENSITIVE=true

# Job Management Configuration
JOB_CLEANUP_DAYS=3
MAX_CONCURRENT_JOBS=5

# Redis Configuration (recommended for staging)
REDIS_ENABLED=true
# Set via environment variable or secret: REDIS_URL

# Staging-specific settings
DEBUG=false
RELOAD=false
ACCESS_LOG=true