# API Configuration
API_TITLE=AnythingLLM API
API_VERSION=1.0.0
API_PREFIX=/api/v1

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=1

# CORS Configuration
CORS_ORIGINS=*

# Database Configuration (PostgreSQL required)
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/anythingllm_api
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Configuration (optional)
REDIS_ENABLED=false
REDIS_URL=redis://localhost:6379/0
REDIS_POOL_SIZE=10

# AnythingLLM Configuration
ANYTHINGLLM_URL=http://localhost:3001
ANYTHINGLLM_API_KEY=your_anythingllm_api_key_here
ANYTHINGLLM_TIMEOUT=30

# File Storage Configuration
STORAGE_TYPE=local
STORAGE_PATH=/tmp/anythingllm-api

# S3 Configuration (when STORAGE_TYPE=s3)
S3_BUCKET=your-bucket-name
S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key

# File Processing Configuration
MAX_FILE_SIZE=104857600  # 100MB in bytes
ALLOWED_FILE_TYPES=pdf,json,csv

# Security Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60
API_KEY_HEADER=X-API-Key

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_SANITIZE_SENSITIVE=true

# Job Management Configuration
JOB_CLEANUP_DAYS=7
MAX_CONCURRENT_JOBS=5